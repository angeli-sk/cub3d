SRC = $(addprefix SRCS/, $(_SRC)) \
		./get_next_line/get_next_line.c \
		./get_next_line/get_next_line_utils.c
OBJ :=	${SRC:%.c=%.o}

#âœ§ï½¥ï¾Ÿ: *âœ§ï½¥ï¾Ÿ:*  *:ï½¥ï¾Ÿâœ§*:ï½¥ï¾Ÿâœ§âœ§ï½¥ *âœ§ï½¥ï¾Ÿ:* COLORS âœ§*:ï½¥ï¾Ÿâœ§: *âœ§ï½¥ï¾Ÿ:* âœ§ *:ï½¥ï¾Ÿâœ§*:ï½¥ï¾Ÿâœ§âœ§ï½¥ï¾Ÿ: *âœ§ï½¥ï¾Ÿ:#

PINK	= 	\033[38;5;206m
PINK2	= \033[38;5;225m
WHITE	= \033[38;5;96m
X		= \033[38;5;
Y		= 1
Z		= m
TZE		= $(eval Y=$(shell echo $$((($(Y)%15)+1))))
LI		= 0
BLUE = \033[38;5;33m
RED = \033[38;5;160m
GREEN = \033[38;5;112m
RANDOM := $$((RANDOM % 10))

#âœ§ï½¥ï¾Ÿ: *âœ§ï½¥ï¾Ÿ:*  *:ï½¥ï¾Ÿâœ§*:ï½¥ï¾Ÿâœ§âœ§ï½¥ *âœ§ï½¥ï¾Ÿ:*  RULES  âœ§*:ï½¥ï¾Ÿâœ§: *âœ§ï½¥ï¾Ÿ:*  *:ï½¥ï¾Ÿâœ§*:ï½¥ï¾Ÿâœ§âœ§ï½¥ï¾Ÿ: *âœ§ï½¥ï¾Ÿ:#

all: $(NAME)

%.o: %.c
	$(CC) -Imlx -c $< -o $@

$(NAME): $(LIBFT) $(OBJ) $(MLX)
	@echo "\n$(X)$(Y)$(Z) â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— ";
	$(TZE)
	@echo "$(X)$(Y)$(Z)â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â•šâ•â•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—";
	$(TZE)
	@echo "$(X)$(Y)$(Z)â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â• â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘";
	$(TZE)
	@echo "$(X)$(Y)$(Z)â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•— â•šâ•â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘";
	@echo "$(X)$(Y)$(Z)â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•";
	@echo "$(X)$(Y)$(Z) â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â•";
	@echo "$(WHITE)â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†"
	@echo "\n$(PINK2)\tðŸ¦„ â„‚ð• ð•žð•¡ð•šð•ð•’ð•¥ð•šð• ð•Ÿ â„‚ð• ð•žð•¡ð•ð•–ð•¥ð•–\n$(PINK) $(WHITE)"
	@echo "$(WHITE)â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†.ã€‚.:*ãƒ»Â°â˜†"
	$(CC) $(FLAGS) $(MLX) $(LIBFT) $^ -o $(NAME) -I mlxs -O3

$(LIBFT):
	cd ./libft && $(MAKE) re && $(MAKE) bonus

$(MLX):
	cd mlx && $(MAKE)
	mv mlx/$(MLX) .

clean:
	@echo "$(PINK)ðŸ¦„	Cleaning ...$(WHITE)\n"
	rm -f $(OBJ)
	cd ./libft && $(MAKE) clean
	cd ./mlx && $(MAKE) clean
	rm -f ./*~ ./*#
	@echo "\n$(PINK2)âœ¨	Cleaning Done!$(WHITE)"

fclean: clean
	@echo "$(PINK)ðŸ¦„	Removing $(NAME) ...\n$(WHITE)"
	rm -f $(NAME)
	cd ./libft && $(MAKE) fclean
	rm -f $(MLX)
	rm -f screenshot.bmp libft.a
	@echo "\n$(PINK2)âœ¨	Removed $(NAME)!$(WHITE)"

re: fclean all

