clean:
	@echo "$(PINK)ðŸ¦„	Cleaning ...$(WHITE)\n"
	rm -f $(OBJ) $(OBJ2)
	rm -f ./*~ ./*#
	@echo "\n$(PINK2)âœ¨	Cleaning Done!$(WHITE)"

fclean: clean
	@echo "$(PINK)ðŸ¦„	Removing $(NAME) ...\n$(WHITE)"
	-rm -f $(NAME)
	@echo "\n$(PINK2)âœ¨	Removed $(NAME)!$(WHITE)"

re: fclean all

